<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/eventCreationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/eventTitle"
                    android:text="Back"/>

                <TextView
                    android:id="@+id/eventTitleHeader"
                    app:layout_constraintTop_toBottomOf="@+id/backButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="30sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="277dp"
                    android:layout_height="32dp"
                    android:id="@+id/eventTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventTitleHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/posterHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Poster"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/editPosterButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/poster"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    android:text="edit"
                    />

                <TextView
                    android:id="@+id/regHeader"
                    app:layout_constraintTop_toBottomOf="@id/poster"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration Period"
                    android:textSize="30sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/regStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="Start:DD/MM/YYY" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/regEnd"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/regHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="End:DD/MM/YYY" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/eventDateHeader"
                    app:layout_constraintTop_toBottomOf="@id/regStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Period"
                    android:textSize="30sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/eventStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="Start:DD/MM/YYY" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/eventEnd"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="End:DD/MM/YYY" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/eventTimeHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Time"
                    android:textSize="30sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/timeStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="Start:00:00AM" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/timeEnd"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="Start:00:00AM" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/maxAttendTitle"
                    app:layout_constraintTop_toBottomOf="@id/timeStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Attendees"
                    android:textSize="30sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="130dp"
                    android:layout_height="24dp"
                    android:id="@+id/maxAttend"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maxAttendTitle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:hint="Enter Max: " />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/descriptionHeader"
                    app:layout_constraintTop_toBottomOf="@id/maxAttend"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Description"
                    android:textSize="30sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:id="@+id/description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:textSize="12dp"
                        android:hint="Enter Description Here: " />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/description"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Next"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:id="@+id/errorMessage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    android:visibility="invisible"
                    android:text="All fields on this page are required."/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/create_event_container2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>