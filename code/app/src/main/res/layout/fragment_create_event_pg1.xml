<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/eventCreationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="52dp"
                    android:layout_marginEnd="345dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/back_button_background"
                    android:src="@drawable/left_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/eventTitleHeader"
                    app:layout_constraintTop_toBottomOf="@+id/backButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/eventTitleHeader"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="105dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:id="@+id/eventTitle"
                    android:layout_width="277dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="Title"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    android:background="@drawable/text_input_background"
                    app:layout_constraintTop_toBottomOf="@id/eventTitleHeader"
                    />

                <TextView
                    android:id="@+id/posterHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Poster"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toEndOf="@id/posterHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    android:fontFamily="@font/work_sans"/>

                <FrameLayout
                    android:id="@+id/posterFrame"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/poster_stroke"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/addIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add_icon"
                        android:scaleType="fitCenter"/>

                    <!-- Main poster image -->
                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/poster_background"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"/>

                    <!-- Smaller add icon overlay -->
                </FrameLayout>

                <TextView
                    android:id="@+id/regHeader"
                    app:layout_constraintTop_toBottomOf="@id/posterFrame"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="20sp"
                    android:text="Registration Period" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/posterFrame"
                    app:layout_constraintStart_toEndOf="@id/regHeader"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:id="@+id/regStart"
                    android:textSize="12sp"
                    android:layout_margin="15dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    android:longClickable="false"
                    android:importantForAutofill="no"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:DD/MM/YYY" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/regEnd"
                    android:layout_margin="15dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:longClickable="false"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    android:importantForAutofill="no"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/regHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:DD/MM/YYY" />

                <TextView
                    android:id="@+id/eventDateHeader"
                    app:layout_constraintTop_toBottomOf="@id/regStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="20sp"
                    android:text="Event Period"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/regEnd"
                    app:layout_constraintStart_toEndOf="@id/eventDateHeader"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/eventStart"
                    android:layout_margin="15dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:longClickable="false"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:DD/MM/YYY" />


                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/eventEnd"
                    android:layout_margin="15dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:longClickable="false"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:DD/MM/YYY" />


                <TextView
                    android:id="@+id/eventTimeHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Time"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/eventEnd"
                    app:layout_constraintStart_toEndOf="@id/eventTimeHeader"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/timeStart"
                    android:layout_margin="15dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:longClickable="false"
                    android:importantForAutofill="no"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:00:00 AM" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/timeEnd"
                    android:layout_margin="15dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:longClickable="false"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:00:00 AM" />


                <TextView
                    android:id="@+id/maxAttendTitle"
                    app:layout_constraintTop_toBottomOf="@id/timeStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Max Attendees"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/timeEnd"
                    app:layout_constraintStart_toEndOf="@id/maxAttendTitle"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/maxAttend"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maxAttendTitle"
                    android:background="@drawable/text_input_background"
                    android:hint="Enter Max: " />


                <TextView
                    android:id="@+id/descriptionHeader"
                    app:layout_constraintTop_toBottomOf="@id/maxAttend"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Description"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="15dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/maxAttend"
                    app:layout_constraintStart_toEndOf="@id/descriptionHeader"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:id="@+id/description"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:layout_margin="15dp"
                    android:scrollbars="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionHeader"
                    android:background="@drawable/text_input_background"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    android:hint="Enter Description Here: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max 500 characters."
                    android:textColor="@color/dark_brown"
                    android:alpha="0.6"
                    android:textSize="12sp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/geoLocation"
                    android:fontFamily="@font/work_sans"/>

                <TextView
                    android:id="@+id/geoLocation"
                    android:layout_width="250sp"
                    android:layout_height="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/work_sans_medium"
                    android:textColor="@color/dark_brown"
                    android:text="Geolocation of entrants required: " />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/geoLocSwitch"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@id/geoLocation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    android:text="" />

                <TextView
                    android:id="@+id/geoLocWarn"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toBottomOf="@id/geoLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/work_sans_bold"
                    android:textColor="@color/dark_brown"
                    android:text="When on, the locations of all attendees and wait-listed participants are stored based on where they were when they signed up. This information is visible only to you. You cannot change this later." />

                <TextView
                    android:id="@+id/randomSelect"
                    android:layout_width="290sp"
                    android:layout_height="50sp"
                    android:layout_margin="15dp"
                    app:layout_constraintTop_toBottomOf="@id/geoLocWarn"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/work_sans_medium"
                    android:textColor="@color/dark_brown"
                    android:text="Randomly select from wait-list if invited users declines: " />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/randomSelectSwitch"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/randomSelect"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/geoLocWarn"
                    android:text="" />

                <TextView
                    android:id="@+id/waitListMax"
                    android:layout_width="220sp"
                    android:layout_height="18sp"
                    android:layout_margin="15dp"
                    app:layout_constraintTop_toBottomOf="@id/randomSelect"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/work_sans_medium"
                    android:textColor="@color/dark_brown"
                    android:text="Max Wait-list Entrants: " />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/maxWaitSwitch"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="70dp"
                    app:layout_constraintStart_toEndOf="@id/waitListMax"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/randomSelectSwitch"
                    android:text="" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/maxWaitFill"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/work_sans"
                    android:textColor="@color/dark_brown"
                    android:alpha="0.7"
                    android:background="@drawable/text_input_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/waitListMax"
                    android:hint="Enter Max: " />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/completeButton"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maxWaitFill"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/yellow"
                    android:textAllCaps="false"
                    android:fontFamily="@font/work_sans_bold"
                    android:text="Complete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:id="@+id/errorMessage"
                    app:layout_constraintTop_toBottomOf="@id/maxWaitFill"
                    app:layout_constraintEnd_toStartOf="@id/completeButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"
                    android:fontFamily="@font/work_sans_medium"
                    android:layout_margin="15dp"
                    android:text="All fields marked with an asterisk(*) \nare required."/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>