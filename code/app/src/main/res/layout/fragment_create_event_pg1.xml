<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/eventCreationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/eventTitle"
                    android:text="Back"/>

                <TextView
                    android:id="@+id/eventTitleHeader"
                    app:layout_constraintTop_toBottomOf="@+id/backButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/eventTitle"
                    android:layout_width="277dp"
                    android:layout_height="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="Title"
                    android:background="@drawable/text_input_background"
                    app:layout_constraintTop_toBottomOf="@id/eventTitleHeader"
                    />

                <TextView
                    android:id="@+id/posterHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Poster"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/editPosterButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/poster"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    android:text="edit"
                    />

                <TextView
                    android:id="@+id/regHeader"
                    app:layout_constraintTop_toBottomOf="@id/poster"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration Period"
                    android:textSize="30sp" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:id="@+id/regStart"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:DD/MM/YYY" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/regEnd"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/regHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:DD/MM/YYY" />

                <TextView
                    android:id="@+id/eventDateHeader"
                    app:layout_constraintTop_toBottomOf="@id/regStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Period"
                    android:textSize="30sp" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/eventStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:DD/MM/YYY" />


                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/eventEnd"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:DD/MM/YYY" />


                <TextView
                    android:id="@+id/eventTimeHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Time"
                    android:textSize="30sp" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/timeStart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:00:00AM" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/timeEnd"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:00:00AM" />



                <TextView
                    android:id="@+id/maxAttendTitle"
                    app:layout_constraintTop_toBottomOf="@id/timeStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Attendees"
                    android:textSize="30sp" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/maxAttend"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maxAttendTitle"
                    android:background="@drawable/text_input_background"
                    android:hint="Enter Max: " />


                <TextView
                    android:id="@+id/descriptionHeader"
                    app:layout_constraintTop_toBottomOf="@id/maxAttend"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Description"
                    android:textSize="30sp" />


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:textSize="12sp"
                    android:id="@+id/description"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Enter Description Here: " />

                <TextView
                    android:id="@+id/geoLocation"
                    android:layout_width="220sp"
                    android:layout_height="18sp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Geolocation of Entrants Required: " />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/geoLocSwitch"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    app:layout_constraintStart_toEndOf="@id/geoLocation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    android:text="" />

                <TextView
                    android:id="@+id/geoLocWarn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/geoLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="When on, the locations of all attendees and wait-listed participants are stored based on where they were when they signed up. This information is visible only to you. You cannot change this later." />

                <TextView
                    android:id="@+id/randomSelect"
                    android:layout_width="220sp"
                    android:layout_height="40sp"
                    app:layout_constraintTop_toBottomOf="@id/geoLocWarn"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Randomly Select From Wait-list if Invited Users Declines: " />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/randomSelectSwitch"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    app:layout_constraintStart_toEndOf="@id/randomSelect"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/geoLocWarn"
                    android:text="" />

                <TextView
                    android:id="@+id/waitListMax"
                    android:layout_width="220sp"
                    android:layout_height="18sp"
                    app:layout_constraintTop_toBottomOf="@id/randomSelect"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Max Wait-list Entrants: " />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/maxWaitSwitch"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    app:layout_constraintStart_toEndOf="@id/waitListMax"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/randomSelectSwitch"
                    android:text="" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/maxWaitFill"
                    android:background="@drawable/text_input_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/waitListMax"
                    android:hint="Enter Max: " />

                <Button
                    android:id="@+id/completeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maxWaitFill"
                    android:layout_weight="1"
                    android:text="Complete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:id="@+id/errorMessage"
                    app:layout_constraintTop_toBottomOf="@id/maxWaitFill"
                    app:layout_constraintEnd_toStartOf="@id/completeButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"
                    android:text="All fields marked with an asterisk(*) are required."/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/create_event_container2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>