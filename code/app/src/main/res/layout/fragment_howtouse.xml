<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back_button_background"
        android:src="@drawable/outline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="55dp" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How To Use BeeThere"
        android:textSize="24sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/space_mono_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/StepbyStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans_bold"
                android:text="Step-By-Step"
                />
            <TextView
                android:id="@+id/Step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Step 1: Join a Wait-list"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/Step1content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans"
                android:text="For events you're interested in, join the wait-list so you can be apart of the lottery system. When clicking an event you are interested in, you can see the details of the event including when a wait-list closes.

                                         If you change your mind, you can leave an event by clicking the 'Leave' button."
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/Step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Step 2: Wait-list Period Ends"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/Step2content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans"
                android:text="Once a wait-list period ends, you may or may not be selected for the event through the lottery system. You can check if you've been selected in your notifications."
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/Step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Step 3: Join or Decline"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/Step3content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/dark_brown"
                android:fontFamily="@font/work_sans"
                android:text="If you've been selected, you can decline or accept the invitation by going to notifications and clicking the 'Go to event' button. Once you scroll to the bottom, you can choose one of the two options."
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
