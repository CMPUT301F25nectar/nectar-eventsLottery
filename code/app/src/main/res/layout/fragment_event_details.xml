<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageButton
        android:id="@+id/posterDeleteButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/trash_bin"
        app:layout_constraintBottom_toBottomOf="@id/event_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/event_detail_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="12dp"
        android:background="@drawable/button_back_arrow"
        android:backgroundTint="@color/dark_brown"
        android:drawableEnd="@drawable/outline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/work_sans_bold"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/button_QR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_image" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_QR"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/dark_brown"
        android:drawableStart="@drawable/qr_code_icon"
        android:paddingStart="11dp"
        android:paddingEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_image" />

    <TextView
        android:id="@+id/hostedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/dark_brown"
        android:text="Hosted By: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_event_name" />

    <TextView
        android:id="@+id/text_host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/hostedBy"
        app:layout_constraintTop_toBottomOf="@+id/text_event_name" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_host_name" />

    <TextView
        android:id="@+id/geoLocReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/work_sans_bold"
        android:text="Geo-Location Required: "
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_description" />

    <TextView
        android:id="@+id/text_geoloc_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/geoLocReq"
        app:layout_constraintTop_toBottomOf="@+id/text_description" />

    <TextView
        android:id="@+id/event_date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/dark_brown"
        android:text="Event Date: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geoLocReq" />

    <TextView
        android:id="@+id/text_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        android:text="@string/placeholder"
        app:layout_constraintStart_toEndOf="@+id/event_date_header"
        app:layout_constraintTop_toBottomOf="@+id/text_geoloc_req" />

    <TextView
        android:id="@+id/event_time_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/dark_brown"
        android:text="Event Time: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_date_header" />

    <TextView
        android:id="@+id/text_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/event_time_header"
        app:layout_constraintTop_toBottomOf="@+id/text_event_date" />

    <TextView
        android:id="@+id/maximum_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/dark_brown"
        android:text="Max Attendees: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_time_header" />

    <TextView
        android:id="@+id/text_max_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/maximum_enroll"
        app:layout_constraintTop_toBottomOf="@+id/text_event_time" />

    <TextView
        android:id="@+id/current_waitlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/dark_brown"
        android:text="Number of People Waitlisted:  "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maximum_enroll" />

    <TextView
        android:id="@+id/text_waitlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_medium"
        android:text="@string/placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/current_waitlist"
        app:layout_constraintTop_toBottomOf="@+id/text_max_enroll" />

    <FrameLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_waitlist">

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>