<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/waitListButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Waitlist"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/invitedButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/invitedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Invited"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toEndOf="@id/waitListButton"
        app:layout_constraintEnd_toStartOf="@id/registeredButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registeredButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registered"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toEndOf="@id/invitedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/entrantSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entrantList"
        app:layout_constraintTop_toBottomOf="@id/invitedButton"
        />

    <ListView
        android:id="@+id/entrantList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/waitListButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
