<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/waitList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entrantList"
        android:text="Wait-List" />

    <Button
        android:id="@+id/invited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invited"
        app:layout_constraintEnd_toStartOf="@id/registered"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toEndOf="@id/waitList"
        tools:layout_editor_absoluteY="51dp" />

    <Button
        android:id="@+id/registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/entrantList"
        android:text="Registered" />

    <ListView
        android:id="@+id/entrantList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/invited"/>
</androidx.constraintlayout.widget.ConstraintLayout>