<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="230dp"
    android:background="@drawable/dialog_fragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/space_mono_bold"
            android:textColor="@color/other_red"
            android:text="Confirm Deletion"/>

        <View
            android:layout_width="240dp"
            android:layout_height="0.6dp"
            app:layout_constraintTop_toBottomOf="@id/goBack"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/dark_brown" />

        <TextView
            android:id="@+id/areYouSure"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_margin="20dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/goBack"
            android:fontFamily="@font/work_sans_semibold"
            android:textColor="@color/dark_brown"
            android:text="Are you sure you'd like to delete this event?"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/yellow"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/dark_brown"
            android:fontFamily="@font/work_sans_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/areYouSure"
            app:layout_constraintEnd_toStartOf="@id/deleteButton"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteButton"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="Delete"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/work_sans_medium"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/other_red"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/areYouSure"
            app:layout_constraintStart_toEndOf="@id/cancelButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
