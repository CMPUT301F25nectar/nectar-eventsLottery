<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_fragment">

    <TextView
        android:id="@+id/filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textSize="24sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/work_sans_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/registration_period_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Registration Period"
        android:textSize="16sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/work_sans_bold"
        app:layout_constraintTop_toBottomOf="@id/filter_title"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/registration_period_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/registration_period_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/filter_registration_start_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Start: DD/MM/YYYY"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/text_input_background"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="To"
            android:textSize="14sp"
            android:textColor="@color/dark_brown"
            android:fontFamily="@font/work_sans" />

        <EditText
            android:id="@+id/filter_registration_end_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="End:DD/MM/YY"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/text_input_background"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:clickable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_period_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Event Period"
        android:textSize="16sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/work_sans_bold"
        app:layout_constraintTop_toBottomOf="@id/registration_period_container"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/event_period_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/event_period_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/filter_event_start_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Start: DD/MM/YYYY"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/text_input_background"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="To"
            android:textSize="14sp"
            android:textColor="@color/dark_brown"
            android:fontFamily="@font/work_sans" />

        <EditText
            android:id="@+id/filter_event_end_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="End: DD/MM/YY"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/text_input_background"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:clickable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Time"
        android:textSize="16sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/work_sans_bold"
        app:layout_constraintTop_toBottomOf="@id/event_period_container"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/time_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/time_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/filter_start_time"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Start: 03:00PM"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/text_input_background"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="To"
            android:textSize="14sp"
            android:textColor="@color/dark_brown"
            android:fontFamily="@font/work_sans" />

        <EditText
            android:id="@+id/filter_end_time"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="End: 10:00PM"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/text_input_background"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/dark_brown"
            android:textColorHint="@color/grey"
            android:focusable="false"
            android:clickable="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tags_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tags"
        android:textSize="16sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/work_sans_bold"
        app:layout_constraintTop_toBottomOf="@id/time_container"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/filter_tags_input"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:hint="Tags"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/text_input_background"
        android:fontFamily="@font/work_sans"
        android:textColor="@color/dark_brown"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/tags_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/waitlist_toggle_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/filter_tags_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Show events that are\nalready waitlisted"
            android:textSize="14sp"
            android:textColor="@color/dark_brown"
            android:fontFamily="@font/work_sans" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/waitlist_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/waitlist_toggle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/filter_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_dark_brown"
            android:fontFamily="@font/work_sans_semibold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/dark_brown"
            android:textSize="16sp" />

        <Button
            android:id="@+id/filter_apply_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Apply"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/dark_brown"
            android:fontFamily="@font/work_sans_semibold"
            android:background="@drawable/button_background"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>