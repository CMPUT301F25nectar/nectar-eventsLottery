<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:fontFamily="@font/work_sans_semibold"
        android:textColor="@color/dark_brown"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <FrameLayout
        android:id="@+id/eventFrame"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/event_image_rounding_admin"
        android:padding="3dp"
        android:layout_margin="9dp"
        app:layout_constraintTop_toBottomOf="@id/eventTitle"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/eventsPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            tools:srcCompat="@tools:sample/avatars"
            android:outlineProvider="background"
            android:background="@drawable/event_image_rounding_no_stroke" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/trash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/trash_bin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/eventFrame"
        android:layout_marginTop="100dp"
        android:layout_marginStart="150dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>