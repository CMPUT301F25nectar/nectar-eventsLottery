<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/eventCreationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="52dp"
                    android:backgroundTint="@color/dark_brown"
                    android:drawableEnd="@drawable/outline_arrow_back_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/eventTitleHeader"
                    app:layout_constraintTop_toBottomOf="@+id/backButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    app:layout_constraintStart_toEndOf="@id/eventTitleHeader"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:id="@+id/eventTitle"
                    android:layout_width="277dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="Title"
                    android:fontFamily="@font/work_sans"
                    android:background="@drawable/search_bar"
                    app:layout_constraintTop_toBottomOf="@id/eventTitleHeader"
                    />

                <TextView
                    android:id="@+id/posterHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Poster"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toEndOf="@id/posterHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    android:fontFamily="@font/work_sans"/>

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/editPosterButtom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/poster"
                    app:layout_constraintTop_toBottomOf="@id/posterHeader"
                    android:text="edit"
                    />

                <TextView
                    android:id="@+id/regHeader"
                    app:layout_constraintTop_toBottomOf="@id/poster"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp"
                    android:text="Registration Period" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="185dp"
                    android:layout_marginEnd="90dp"
                    app:layout_constraintTop_toBottomOf="@id/eventTitle"
                    app:layout_constraintStart_toEndOf="@id/regHeader"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/work_sans"/>


                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:id="@+id/regStart"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:DD/MM/YYY" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/regEnd"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/regHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:DD/MM/YYY" />

                <TextView
                    android:id="@+id/eventDateHeader"
                    app:layout_constraintTop_toBottomOf="@id/regStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp"
                    android:text="Event Period"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/regEnd"
                    app:layout_constraintStart_toEndOf="@id/eventDateHeader"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/eventStart"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:DD/MM/YYY" />


                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/eventEnd"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventDateHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:DD/MM/YYY" />


                <TextView
                    android:id="@+id/eventTimeHeader"
                    app:layout_constraintTop_toBottomOf="@id/eventStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Time"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/eventEnd"
                    app:layout_constraintStart_toEndOf="@id/eventTimeHeader"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/timeStart"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Start:00:00 AM" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/timeEnd"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toEndOf="@id/regStart"
                    app:layout_constraintTop_toBottomOf="@id/eventTimeHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="End:00:00 AM" />


                <TextView
                    android:id="@+id/maxAttendTitle"
                    app:layout_constraintTop_toBottomOf="@id/timeStart"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Max Attendees"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/timeEnd"
                    app:layout_constraintStart_toEndOf="@id/maxAttendTitle"
                    android:fontFamily="@font/work_sans"/>

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:id="@+id/maxAttend"
                    android:layout_margin="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/maxAttendTitle"
                    android:background="@drawable/text_input_background"
                    android:hint="Enter Max: " />


                <TextView
                    android:id="@+id/descriptionHeader"
                    app:layout_constraintTop_toBottomOf="@id/maxAttend"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Description"
                    android:fontFamily="@font/space_mono_bold"
                    android:textColor="@color/dark_brown"
                    android:layout_margin="10dp"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="#FF0000"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/maxAttend"
                    app:layout_constraintStart_toEndOf="@id/descriptionHeader"
                    android:fontFamily="@font/work_sans"/>


                <EditText
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:id="@+id/description"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:layout_margin="10dp"
                    android:scrollbars="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/descriptionHeader"
                    android:background="@drawable/text_input_background"
                    android:hint="Enter Description Here: " />


                <Button
                    android:id="@+id/completeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    android:layout_weight="1"
                    android:text="Complete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:id="@+id/errorMessage"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintEnd_toStartOf="@id/completeButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"
                    android:fontFamily="@font/work_sans_medium"
                    android:text="All fields marked with an asterisk(*) are required."/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/create_event_container2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>