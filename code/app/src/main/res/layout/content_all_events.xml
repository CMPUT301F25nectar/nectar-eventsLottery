<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/EventItem"
        android:layout_width="0dp"
        android:layout_height="155dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/honeycomb1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/honeycomb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/honeycomb2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginEnd="270dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/honeycomb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/eventFrame"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/event_image_rounding"
            android:padding="3dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/EventsPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                tools:srcCompat="@tools:sample/avatars"
                android:outlineProvider="background"
                android:background="@drawable/event_image_rounding_no_stroke" />
        </FrameLayout>

        <TextView
            android:id="@+id/EventsTitle"
            android:layout_width="180dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toEndOf="@+id/eventFrame"
            app:layout_constraintTop_toTopOf="@+id/eventFrame"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:textSize="25sp"
            android:lineSpacingExtra="-6dp"
            android:fontFamily="@font/space_mono_bold"
            android:textColor="@color/dark_brown"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/EventEnrollPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EventsTitle"
            app:layout_constraintStart_toStartOf="@id/EventsTitle"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:fontFamily="@font/work_sans_medium"
            android:textColor="@color/dark_brown"
            android:text="Enrollment Period: " />

        <TextView
            android:id="@+id/EventEnrollStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/EventEnrollPeriod"
            app:layout_constraintStart_toStartOf="@id/EventEnrollPeriod"
            android:fontFamily="@font/work_sans_semibold"
            android:textColor="@color/dark_brown"
            android:textSize="15sp"
            android:text="@string/placeholder" />

        <ImageButton
            android:id="@+id/admin_options_menu_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dots_horizontal_svgrepo_com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>