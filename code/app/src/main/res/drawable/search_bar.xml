<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background with stroke -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@color/dark_brown" />
            <solid android:color="@android:color/white" />
            <padding
                android:left="8dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:gravity="end|center">
        <layer-list>
            <item
                android:drawable="@drawable/search_icon_circle"
                android:width="37dp"
                android:height="37dp"/>
            <item
                android:drawable="@drawable/search_iconn"
                android:gravity="center"
                android:width="22dp"
                android:height="22dp"/>
        </layer-list>
    </item>

</layer-list>
